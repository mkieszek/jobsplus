<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
		<delete id="crm.stage_lead1" model="crm.case.stage"/>
		<delete id="crm.stage_lead2" model="crm.case.stage"/>
		<delete id="crm.stage_lead3" model="crm.case.stage"/>
		<delete id="crm.stage_lead4" model="crm.case.stage"/>
		<delete id="crm.stage_lead5" model="crm.case.stage"/>
		<delete id="crm.stage_lead6" model="crm.case.stage"/>
		<delete id="crm.stage_lead7" model="crm.case.stage"/>
		
        <!-- Crm stages -->
        <record model="crm.case.stage" id="jp_stage_lead1">
            <field name="name">New</field>
            <field name="case_default">1</field>
            <field name="probability">0</field>
            <field name="on_change">1</field>
            <field name="sequence">1</field>
            <field name="type">both</field>
            <field name="state">draft</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead2">
            <field name="name">Dead</field>
            <field name="case_default">1</field>
            <field name="fold">1</field>
            <field name="probability">0</field>
            <field name="on_change">1</field>
            <field name="sequence">30</field>
            <field name="type">lead</field>
            <field name="state">cancel</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead3">
            <field name="name">Qualification</field>
            <field name="case_default">1</field>
            <field name="probability">20</field>
            <field name="on_change">1</field>
            <field name="sequence">40</field>
            <field name="type">opportunity</field>
            <field name="state">open</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead4">
            <field name="name">Proposition</field>
            <field name="case_default">1</field>
            <field name="probability">40</field>
            <field name="sequence">50</field>
            <field name="type">opportunity</field>
            <field name="state">open</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead5">
            <field name="name">Negotiation</field>
            <field name="case_default">1</field>
            <field name="probability">60</field>
            <field name="sequence">60</field>
            <field name="type">opportunity</field>
            <field name="state">open</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead6">
            <field name="name">Won</field>
            <field name="case_default">1</field>
            <field name="fold">1</field>
            <field name="probability">100</field>
            <field name="on_change">1</field>
            <field name="sequence">70</field>
            <field name="type">both</field>
            <field name="state">done</field>
        </record>
        <record model="crm.case.stage" id="jp_stage_lead7">
            <field name="name">Lost</field>
            <field name="case_default">1</field>
            <field name="fold">1</field>
            <field name="probability">0</field>
            <field name="on_change">1</field>
            <field name="sequence">80</field>
            <field name="type">opportunity</field>
            <field name="state">cancel</field>
        </record>
    </data>
</openerp>